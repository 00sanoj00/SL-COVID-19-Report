<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentView"
    android:background="@color/white"
    tools:context=".MainActivity">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="90dp"
                android:layout_alignParentBottom="true"
                android:layout_height="210dp"
                android:background="@drawable/ic_rebole"/>


            <ImageView
                android:layout_width="70dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_height="160dp"
                android:background="@drawable/ic_bole"/>

            <ImageView
                android:layout_width="match_parent"

                android:layout_height="220dp"
                android:background="@drawable/head_main"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />






            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="205dp"
                android:background="@drawable/ic_totoalico"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:layout_marginTop="297dp"
                android:background="@drawable/ic_newcaseico"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="389dp"
                android:background="@drawable/ic_hospitalico"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="481dp"
                android:background="@drawable/ic_dethnst"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="573dp"
                android:background="@drawable/ic_recoveryico"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:layout_marginLeft="@dimen/leftmargin"
            android:layout_marginTop="267dp"
            android:textSize="@dimen/headtxtsize"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tcases" />
            <TextView
                android:id="@+id/mcase"
                android:layout_marginTop="223dp"
                android:textSize="@dimen/qtyfontsize"
                android:layout_centerHorizontal="true"
                android:textColor="@color/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />


            <TextView
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginTop="359dp"
                android:textSize="@dimen/headtxtsize"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ncases" />

            <TextView
                android:id="@+id/mncase"
                android:layout_marginTop="315dp"
                android:textSize="@dimen/qtyfontsize"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/tow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />


            <TextView
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginTop="451dp"
                android:textSize="@dimen/headtxtsize"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inhoss" />

            <TextView
                android:id="@+id/minhos"
                android:layout_marginTop="407dp"
                android:textSize="@dimen/qtyfontsize"
                android:layout_centerHorizontal="true"
                android:textColor="@color/thre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginTop="543dp"
                android:text="@string/deths"
                android:textColor="@color/white"
                android:textSize="@dimen/headtxtsize" />

            <TextView
                android:id="@+id/mdeth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="500dp"
                android:textSize="@dimen/qtyfontsize"
                android:layout_marginLeft="320dp"
                android:gravity="center"
                android:textColor="@color/fore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />


            <TextView
                android:layout_marginLeft="@dimen/leftmargin"
                android:layout_marginTop="635dp"
                android:textSize="@dimen/headtxtsize"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recovs" />

            <TextView
                android:id="@+id/mrecov"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="592dp"
                android:textSize="@dimen/qtyfontsize"
                android:gravity="center"
                android:textColor="@color/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />


            <ImageView
                android:id="@+id/imgGenerated"
                android:layout_width="75dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="40dp"
                android:layout_height="85dp"
                android:background="@drawable/back_frame" />



            <TextView
                android:id="@+id/sync"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="212dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020 02 20" />


            <TextView
                android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:layout_marginTop="5dp"
            android:textSize="32dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LK" />


            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="36dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COVID-19" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="45dp"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Situation Report" />

            <Button
                android:id="@+id/share"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="135dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_share"/>



        </RelativeLayout>

    </ScrollView>

    <iammert.com.library.ConnectionStatusView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:dismissOnComplete="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>


